<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <h1 class="mt-3">Course List</h1>
    <a href="/login/logout">logout</a>
    <form action="/course" method="get">
      <div class="input-group">
        <input
          type="text"
          class="form-control"
          id="inputGroupFile04"
          aria-describedby="inputGroupFileAddon04"
          aria-label="Upload"
          placeholder="Search course"
          name="search"
        />
        <button
          class="btn btn-outline-primary"
          type="submit"
          id="inputGroupFileAddon04"
        >
          SEARCH
        </button>
      </div>
    </form>
    <div class="mb-3 mt-3">
      <a href="/course/add" class="btn btn-primary">Add course</a>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>No</th>
          <th>Title</th>
          <th>Price</th>
          <th>Duration</th>
          <th>Category</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% courses.forEach((course, idx) => { %>
        <tr>
          <td><%= idx+1 %></td>
          <td><%= course.Course.title %></td>
          <td><%= course.Course.price %></td>
          <td><%= course.Course.duration %></td>
          <td><%= course.Course.Category.name %></td>
          <td>
            <a
              href="/course/delete/<%= course.Course.id %>"
              class="btn btn-danger"
              >Delete</a
            >
          </td>
        </tr>

        <% }) %>
      </tbody>
    </table>
  </body>
</html>
