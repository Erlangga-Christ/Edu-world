<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Courses</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1>Courses</h1>

      <div class="mb-3 mt-3">
        <a href="/instructor/add" class="btn btn-primary">Add Course</a>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>No</th>
            <th>Title</th>
            <th>Price</th>
            <th>Duration</th>
            <th>Category</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach((course, idx) => { %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= course.title %></td>
            <td><%= course.price %></td>
            <td><%= course.duration %></td>
            <td><%= course.Category.name %></td>
            <td>
              <a
                href="/instructor/edit/<%= course.id %>"
                class="btn btn-warning"
                >Edit</a
              >
              <a
                href="/instructor/delete/<%= course.id %>"
                class="btn btn-danger"
                >Delete</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
